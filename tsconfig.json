{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "outDir": "./dist",
    "lib": ["ES2023", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                 
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "declaration": true
  },
  "include": [
    "lib/**/*.json",
    "env.d.ts",
    "lib"
  ],
  "exclude": ["node_modules", "types"]
}